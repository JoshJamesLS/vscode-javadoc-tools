{
    "name": "javadoc-tools",
    "displayName": "Javadoc Tools",
    "description": "Javadoc Tools for VsCode",
    "author": "Madhav Dhingra",
    "publisher": "madhavd1",
    "version": "1.2.0",
    "preview": true,
    "license": "MIT",
    "icon": "img/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/madhavd1/vscode-javadoc-tools"
    },
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:javadoc-tools.jdocGenerate",
        "onCommand:javadoc-tools.generateCommentsForWorkspace",
        "onLanguage:java",
        "workspaceContains:**/*.java"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [{
                "command": "javadoc-tools.jdocGenerate",
                "title": "Javadoc Tools: Generate Javadoc Comments for Open File",
                "when": "editorLangId == Java"
            },
            {
                "command": "javadoc-tools.generateCommentsForWorkspace",
                "title": "Javadoc Tools: Generate Javadoc Comments for Workspace",
                "when": "editorLangId == java"
            },
            {
                "command": "javadoc-tools.jdocGenerateFromContext",
                "title": "Generate Javadoc Comments"
            }
        ],
        "menus": {
            "explorer/context": [{
                "command": "javadoc-tools.jdocGenerateFromContext",
                "when": "resourceExtname == .java"
            }]

        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    },
    "extensionDependencies": [
        "redhat.java"
    ]
}